{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["DOM", "ES2022"],
        "moduleResolution": "node",
        "target": "ES2022",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": ["src"]
}
